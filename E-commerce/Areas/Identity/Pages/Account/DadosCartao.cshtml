@page
@model CartaoCreditoModel

<!DOCTYPE html>

<div class="container">
    <div class="row">
        <div>
            <partial name="_MenuManager" />
        </div>
    </div>
    <div class="row">
        <input type="hidden" asp-for="DadosCartao.CartaoId">
        <input type="hidden" asp-for="DadosCartao.UserId">

        <form method="post">

            <div class="form-group col-lg-4">
                <label asp-for="DadosCartao.NomeCartao"></label>
                <input asp-for="DadosCartao.NomeCartao" class="le-input form-control-lg" />
            </div>
            <div class="row"></div>
            <div class="form-group col-lg-4">
                <label asp-for="DadosCartao.NumeroCartao"></label>
                <input asp-for="DadosCartao.NumeroCartao" class="le-input form-control-lg" />
            </div>
            <div class="row"></div>
            <div class="form-group col-lg-2">
                <label asp-for="DadosCartao.DataValidade"></label>
                <input asp-for="DadosCartao.DataValidade" class="date le-input form-control-lg" />
            </div>
            <div class="row"></div>
            <div class="buttons-holder">
                <button type="submit" class="le-button huge">Salvar</button>
            </div>

        </form>
    </div>
</div>